<% include ../partials/header %>


<div class="container">

	<div class="row">
		<h1 style="text-align: center">Edit Comment</h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/books/<%= book_id %>/comments/<%= comment._id %>?_method=PUT" method="post">
				<div class="form-group">
					<textarea style="height: 100px" class="form-control" placeholder="Comment" name="comment[text]"><%= comment.text %></textarea>
				</div>
				<div class="form-group">
					<input class="btn-primary btn-block btn btn-lg btn-default" type="submit" value="Edit Comment">
				</div>
			</form>
			<a class="btn btn-info" href="/books">Back to Books</a>
		</div>
		

		

	</div>
</div>

<% include ../partials/footer %>