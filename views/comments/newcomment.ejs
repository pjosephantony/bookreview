<% include ../partials/header %>


<div class="container">

	<div class="row">
		<h1 style="text-align: center">Add New Comment to the book - <%= book.name %></h1>
		<div style="width: 30%; margin: 30px auto;">
			<form action="/books/<%= book._id %>/comments" method="post">
				<div class="form-group">
					<textarea style="height: 100px" class="form-control" placeholder="Comment" name="comment[text]"></textarea>
				</div>
				<div class="form-group">
					<input class="btn-primary btn-block btn btn-lg btn-default" type="submit" value="Add Comment">
				</div>
			</form>
			<a class="btn btn-info" href="/books">Back to Books</a>
		</div>
		

		

	</div>
</div>

<% include ../partials/footer %>