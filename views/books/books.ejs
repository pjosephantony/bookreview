<% include ../partials/header %>



<div class="container">
<header class="jumbotron">
	<div class="container">
		<h1>Find the favourite books</h1>
	<p>add new books and write what you think about them and also comment on what you think of other books</p>

	<p>
		<a href="/books/new" class="btn btn-primary btn-large">Add New Book</a>
	</p>
	</div>
	
</header>

<div class="row" style="display:flex; flex-wrap: wrap;">
<% books.forEach(function(book){ %>
	<div class="col-md-3 col-sm-6">
		<div class="thumbnail text-center">
			<img src="<%= book.image %>">
			<div class="caption">
				<h4><%= book.name %></h4>
			</div>
			<p>
				<a href="/books/<%= book._id %>" class="btn btn-sm btn-info">More Info</a>
			</p>
		</div>
	</div>
<% }); %>
</div>
</div>
<% include ../partials/footer %>