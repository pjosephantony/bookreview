<% include ../partials/header %>


<div class="container">

	<div class="row">
		<h1 style="text-align: center">Add a New Book</h1>
		<!-- <div style="width: 30%; margin: 30px auto;"> -->
		
			<form action="/books" method="post">

				<div class="col-md-5">
					<div class="form-special-align">
						<div class="form-group">
							<input class="form-control" type="text" placeholder="Book title" name="book[name]">
						</div>
						<div class="form-group">
							<input class="form-control" type="text" placeholder="Image Url" name="book[image]">
						</div>
						<div class="form-group">
							<input class="form-control" type="text" placeholder="Author Name" name="book[author]">
						</div>
						<div class="form-group">
							<input class="form-control" type="text" placeholder="Genre" name="book[genre]">
						</div>
						<div class="form-group">
							<input class="form-control" type="number" placeholder="price" name="book[price]" min="1" step="0.01">
						</div>
					</div>
				</div>
				<div class="col-md-7 form-special-align">
					<div class="form-group">
						<textarea style="height: 232px" class="form-control" placeholder="Type your review here" name="book[review]"></textarea>
					</div>	
				</div>
				
				<div class="form-group form-align">
					<input class="btn-primary btn-block btn btn-lg btn-default" type="submit" value="Add Book">
				</div>
			</form>
			<a class="btn btn-info" href="/books">Back to Books</a>
	</div>
</div>
<% include ../partials/footer %>